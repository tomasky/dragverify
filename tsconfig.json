{
  "compilerOptions": {
    "strict": false,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": [
    "./**/*.*"
  ],
  "exclude": [
    "**/build/**",
    "**/dist/**",
    "**/node_modules/**"
  ]
}
